<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLay"
        android:layout_width="308dp"
        android:layout_height="454dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/imgBoxing"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:tag="boxing"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_row="0"
            app:layout_rowWeight="0"
            app:srcCompat="@drawable/boxing" />

        <ImageButton
            android:id="@+id/imgKickBoxing"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:tag="kickboxing"
            app:layout_column="1"
            app:layout_columnWeight="0"
            app:layout_row="0"
            app:layout_rowWeight="0"
            app:srcCompat="@drawable/kickboxing" />

        <ImageButton
            android:id="@+id/imgJudo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:tag="judo"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_row="1"
            app:layout_rowWeight="0"
            app:srcCompat="@drawable/judo" />

        <ImageButton
            android:id="@+id/imgKarate"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:tag="karate"
            app:layout_column="1"
            app:layout_columnWeight="0"
            app:layout_row="1"
            app:layout_rowWeight="0"
            app:srcCompat="@drawable/karate" />

        <ImageButton
            android:id="@+id/imgAikido"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:tag="aikido"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_row="2"
            app:layout_rowWeight="0"
            app:srcCompat="@drawable/aikido" />

        <ImageButton
            android:id="@+id/imgTekwondo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:tag="taekwondo"
            app:layout_column="1"
            app:layout_columnWeight="0"
            app:layout_row="2"
            app:layout_rowWeight="0"
            app:srcCompat="@drawable/taekwondo" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>